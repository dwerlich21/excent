<script>

    var index = 0;
    var partial = 0;
    var total = 1;
    var user = 0;
    var country = 0;

    function openModal() {
        $('#modal').modal('show');
        $('#transaction').hide();
        document.getElementById('addTransaction').reset();
        $("#valueTransaction").maskMoney({
            prefix: '$ ',
            allowNegative: true,
            thousands: '.',
            decimal: ',',
            affixesStay: false
        });
    }

    const formAdd = document.getElementById('addTransaction');
    const divMessage = document.getElementById('transaction');

    formAdd.addEventListener('submit', e => {
        var teste = document.getElementById('projectFile');
        console.log(teste);
        e.preventDefault();
        showLoading();
        let method = 'POST';
        let formData = formDataToJson('addTransaction');
        fetch("<?= BASEURL ?>transactions/register", {
            method: method,
            credentials: 'same-origin',
            headers: {
                'Accept': 'application/json',
            },
            body: new FormData(formAdd)
        }).then(response => {
            closeLoading();
            divMessage.classList.add("alert-danger");
            divMessage.classList.remove("alert-success");
            $('#save').removeClass('disabled');
            response.json().then(json => {
                divMessage.textContent = json.message;
                divMessage.style.display = 'block';
                if (response.status === 201) {
                    divMessage.classList.add("alert-success");
                    divMessage.classList.remove("alert-danger");
                    formAdd.reset();
                    setTimeout(function () {
                        location.reload();
                    }, 1500);
                }
            });
        });
    });

    const form = document.getElementById('filter');

    form.addEventListener('submit', e => {
        e.preventDefault();
        let formData = formDataToJson('filter');
        partial = 0;
        index = 0;
        total = 1;
        user = formData.user;
        country = formData.country;
        $("#transactionsTable tbody").empty();
        generateTable();
    });

    function resetTable() {
        index = 0;
        partial = 0;
        total = 1;
        user = 0;
        country = 0;
        $("#transactionsTable tbody").empty();
        generateTable();
    }


    function generateTransactionsTable(transaction) {
        let actions = '';
        actions += `<i class="fa fa-pencil text-info" title="Edit" onclick="openModalEdit(${transaction.id})"></i> `
        actions += `<i class="fa fa-times text-danger ml-2" title="Delete" onclick="deleteTransaction(${transaction.id})"></i> `;
        actions = `<td class="text-center">${actions} </td>`;
        return `<tr>
                    <td class="text-center">${transaction.date}</td>
                    <td class="text-center">${transaction.user}</td>
                    <td class="text-center">${transaction.country}</td>
                    <td class="text-center">${maskMoneyTable(transaction.value)}</td>
                    <td class="text-center">${transaction.responsible}</td>
                    ${actions}
                </tr>`;
    }

    function deleteTransaction(id) {
        $('#loader').show();
        fetch(`<?= BASEURL ?>transactions/delete/api/${id}`, {
            method: "GET",
            credentials: 'same-origin',
            headers: {
                'Accept': 'application/json',
                'Content-Type': 'application/json'
            }
        });
        location.reload();
    }

    function generateTable() {
        if (total > partial) {
            $('#loader').show();
            fetch(`<?= BASEURL ?>transactions/api/?index=${index}&user=${user}&country=${country}`, {
                method: "GET",
                credentials: 'same-origin',
                headers: {
                    'Accept': 'application/json',
                    'Content-Type': 'application/json'
                }
            }).then(response => {
                response.json().then(json => {
                    $('#loader').hide();
                    $('#total').text(json.total);
                    $('#partial').text(json.partial);
                    total = json.total;
                    partial = json.partial;
                    let options = json.message.map(generateTransactionsTable);
                    $("#transactionsTable tbody").append(options);

                });
            });
        }
    }

    $(document).ready(function () {
        generateTable();
        $(window).scroll(function () {
            if ($(window).scrollTop() + $(window).height() >= $(document).height() - 1) {
                index++;
                generateTable();
            }
        });
    });

    function openModalEdit(id) {

        document.getElementById('addTransaction').reset();
        document.getElementById('transactionId').value = id;
        $('#modal').modal('show');
        $('#transaction').hide();
        if (id > 0) {
            showLoading();
            fetch(`<?= BASEURL ?>transactions/api/${id}`, {
                method: "GET",
                credentials: 'same-origin',
                headers: {
                    'Accept': 'application/json',
                    'Content-Type': 'application/json'
                }
            }).then(response => {
                response.json().then(json => {
                    json = json.message[0];
                    closeLoading();
                    document.getElementById('valueTransaction').value = maskMoneyTable(json.value);
                    document.getElementById('userTransaction').value = json.userId;
                });
            });
        }
    }

    function maskMoneyTable(value) {
        var money = parseFloat(value);

        money = money.toLocaleString('en-us', {style: 'currency', currency: 'USD'});

        return money;
    }
</script>
