<div class="row">
    <div class="col">
        <div class="card p-3">
            <div class="row">
                <div class="col-md-8">
                    <h5 class="title">Usuários</h5>
                </div>
                <div class="col-md-4">
                    <a class="float-right btn btn-primary text-white" href="#" onclick="openModal()"> Usuário <i
                                class="fa fa-plus"></i></a>
                </div>
            </div>
            <form id="filter">
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="nameFilter">Nome</label>
                            <input class="form-control" id="nameFilter" name="name" type="text" placeholder="Nome">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="emailFilter">E-mail</label>
                            <input class="form-control" id="emailFilter" name="email" type="text" placeholder="E-mail">
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label for="activeFilter">Status</label>
                            <select name="active" id="activeFilter" class="form-control">
                                <option value="-1">Selecione</option>
                                <option value="1">Ativo</option>
                                <option value="0">Inativo</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label for="typeFilter">Tipo</label>
                            <select name="type" id="typeFilter" class="form-control">
                                <option value="-1">Selecione</option>
                                <option value="1">Admin</option>
                                <option value="0">Convencional</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col text-right">
                        <button class="btn btn-danger" type="reset" onclick="resetTable()">Limpar</button>
                        <button class="btn btn-primary" type="submit">Filtrar</button>
                    </div>
                </div>
            </form>
            <p>Exibindo <span id="partial"></span> de <span id="total"></span> </p>
            <table class="table table-bordered table-striped" id="usersTable" width="100%" cellspacing="0">
                <thead>
                <tr>
                    <th class="text-center">Nome</th>
                    <th class="text-center">Tipo</th>
                    <th class="text-center">E-mail</th>
                    <th class="text-center">Status</th>
                    <th class="text-center">Ações</th>
                </tr>
                </thead>
                <tbody></tbody>
            </table>
            <div style="display: none" id="message" class="alert alert-danger" role="alert"></div>
        </div>
    </div>
</div>

<!-- Modal Cadastro-->
<div class="modal fade" id="modal" tabindex="-1" role="dialog" aria-labelledby="subscriptionModal"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Cadastro de Usuário</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form class="form-control" id="addUser" method="post">
                <div class="form-group">
                    <input type="hidden" name="userId" id="userId">
                    <div class="row">
                        <div class="col">
                            <label for="name">Nome</label>
                            <input id="name" name="name" class="form-control" type="text" placeholder="Nome">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <label for="email">E-mail</label>
                            <input id="email" name="email" class="form-control" type="email" placeholder="E-mail">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label for="type">Tipo</label>
                            <select id="type" name="type" class="form-control">
                                <option value="1">Admin</option>
                                <option value="0">Convencional</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label for="active">Status</label>
                            <select id="active" name="active" class="form-control">
                                <option value="1">Ativo</option>
                                <option value="0">Inativo</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col text-right">
                        <button type="submit" class="btn btn-primary">Salvar Usuário</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<script>

    function openModal() {
        $('#modal').modal('show');
        $('#message').hide();
        document.getElementById('addUser').reset();
    }

    function openModalEdit(id) {

        document.getElementById('addUser').reset();
        document.getElementById('userId').value = id;
        $('#modal').modal('show');
        $('#message').hide();
        if (id > 0) {
            showLoading();
            fetch(`<?= BASEURL ?>api/usuarios/${id}`, {
                method: "GET",
                credentials: 'same-origin',
                headers: {
                    'Accept': 'application/json',
                    'Content-Type': 'application/json'
                }
            }).then(response => {
                response.json().then(json => {
                    json = json.message[0];
                    closeLoading();
                    document.getElementById('email').value = json.email;
                    document.getElementById('type').value = json.type;
                    document.getElementById('name').value = json.name;
                    document.getElementById('active').value = json.active;
                });
            });
        }
    }

    const formAdd = document.getElementById('addUser');
    const divMessage = document.getElementById('message');

    formAdd.addEventListener('submit', e => {
        e.preventDefault();
        showLoading();
        let formData = formDataToJson('addUser');
        fetch("<?= BASEURL ?>gerenciar/usuarios/cadastro", {
            method: 'POST',
            credentials: 'same-origin',
            headers: {
                'Accept': 'application/json',
                'Content-Type': 'application/json'
            },
            body: JSON.stringify(formData)
        }).then(response => {
            closeLoading();
            divMessage.classList.add("alert-danger");
            divMessage.classList.remove("alert-success");
            response.json().then(json => {
                divMessage.textContent = json.message;
                divMessage.style.display = 'block';
                if (response.status === 201) {
                    $('#modal').modal('hide');
                    divMessage.classList.add("alert-success");
                    divMessage.classList.remove("alert-danger");
                    formAdd.reset();
                    setTimeout(function () {
                        location.reload();
                    }, 1500);
                }
            });
        });
    });

    var index = 0;
    var partial = 0;
    var total = 1;
    var active = -1;
    var name = 0;
    var email = 0;
    var type = -1;

    const form = document.getElementById('filter');

    form.addEventListener('submit', e => {
        e.preventDefault();
        let formData = formDataToJson('filter');
        partial = 0;
        index = 0;
        total = 1;
        active = formData.active;
        name = formData.name;
        email = formData.email;
        type = formData.type;
        $("#usersTable tbody").empty();
        generateTable();
    });

    function resetTable() {
        index = 0;
        partial = 0;
        total = 1;
        active = -1;
        name = 0;
        email = 0;
        type = -1;
        $("#usersTable tbody").empty();
        generateTable();
    }

    function generateUsersTable(user) {
        let actions = '';
        actions += `<i class="fa fa-pencil text-info" title="Editar" onclick="openModalEdit(${user.id})"></i> `;
        actions = `<td class="text-center">${actions} </td>`;
        return `<tr>
                    <td class="text-center">${user.name}</td>
                    <td class="text-center">${typeStr(user.type)}</td>
                    <td class="text-center">${user.email}</td>
                    <td class="text-center">${activeStr(user.active)}</td>
                    ${actions}
                </tr>`;
    }

    function typeStr(type) {
        if (type == 1) {
            return 'Admin';
        } else {
            return 'Convencional';
        }
    }

    function activeStr(active) {
        if (active == 1) {
            return 'Ativo';
        } else {
            return 'Inativo';
        }
    }
    
    function generateTable() {
        if (total > partial) {
            $('#loader').show();
            fetch(`<?= BASEURL ?>api/usuarios/?index=${index}&name=${name}&email=${email}&type=${type}&active=${active}`, {
                method: "GET",
                credentials: 'same-origin',
                headers: {
                    'Accept': 'application/json',
                    'Content-Type': 'application/json'
                }
            }).then(response => {
                response.json().then(json => {
                    $('#loader').hide();
                    $('#total').text(json.total);
                    $('#partial').text(json.partial);
                    total = json.total;
                    partial = json.partial;
                    let options = json.message.map(generateUsersTable);
                    $("#usersTable tbody").append(options);
                });
            });
        }
    }

    $(document).ready(function () {
        generateTable();
        $(window).scroll(function () {
            if ($(window).scrollTop() + $(window).height() >= $(document).height() - 1) {
                index++;
                generateTable();
            }
        });
    });

</script>
